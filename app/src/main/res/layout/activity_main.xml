<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.app.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image I"
        android:id="@+id/addImageIButton"
        android:layout_marginTop="71dp"
        android:layout_alignTop="@+id/imageI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageI"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageII"
        android:layout_alignStart="@+id/imageII" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image II"
        android:id="@+id/addImageIIButton"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/imageII"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageII"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/addImageIIButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match"
        android:id="@+id/matchButton"
        android:singleLine="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageI" />
</RelativeLayout>
